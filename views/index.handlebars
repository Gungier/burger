
<div class="container centering">
    <div class="row">
        <div class="col-md-12">
            <h1 class="animated zoomInUp slow"> Eat-Da-Burger</h1>
        </div>
    </div>
    <div class="row">
        
        <div class="col-md-5 tables">
            <h2 class="animated infinite pulse slow">EAT ME! MMMMM</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class= "col-md-2">
        </div>
        <div class="col-md-5 tables">
            <h2 class="animated infinite pulse slow">Brothers Who've Been Eaten...</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        
    </div>
    <div class="row">
        <div class="col-md-12">
            <form class="create-form">
                <div class="form-group">
                    <label for="burg">Burger Name:</label>
                    <input type="text" id="burg" name="name" required>
                </div>
                <button class="btn btn-light" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>
